<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exerciseName"
        android:gravity="left"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sets"
        android:text="@string/sets"
        android:layout_below="@+id/exerciseName"
        android:layout_alignBottom="@+id/setsEditText"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/setsEditText"
        android:gravity="center"
        android:layout_below="@+id/exerciseName"
        android:layout_toRightOf="@+id/sets"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:text="@string/weight"
        android:layout_below="@+id/sets"
        android:layout_alignBottom="@+id/weightEditText"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/weightEditText"
        android:layout_toRightOf="@+id/weight"
        android:layout_below="@+id/setsEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reps"
        android:text="@string/reps"
        android:layout_below="@+id/weight"
        android:layout_alignBottom="@+id/repsEditText"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/repsEditText"
        android:layout_toRightOf="@+id/reps"
        android:layout_below="@+id/weightEditText"/>

</RelativeLayout>