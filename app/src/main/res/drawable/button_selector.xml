    <!-- Gray shadow. -->
    <!-- White foreground. -->
    <item android:bottom="5dp" android:right="3dp">
        <shape>
            <solid android:color="#606060" />
            <corners android:radius="5dp" />
            <stroke android:width="5px" android:color="#FFD520"></stroke>
        </shape>
    </item>
</layer-list>